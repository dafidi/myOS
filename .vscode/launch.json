  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "attach",
      "name": "Attach to QEMU",
      "executable": "${workspaceFolder}/kernel.elf",
      "target": ":1234",
      "remote": true,
      "cwd": "${workspaceRoot}", 
      "gdbpath": "/usr/bin/gdb",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "StartVM",
      "postDebugTask": "StopVM"
    }
  ]
}
